{
  "buildCommand": "bun run build",
  "outputDirectory": "build",
  "installCommand": "bun install",
  "framework": "sveltekit",
  "regions": ["iad1"],
  "functions": {
    "src/routes/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "https://worksmart.com/forms",
      "permanent": false
    }
  ]
}
